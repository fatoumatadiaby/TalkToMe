<h1>Login</h1>
<div>
<%= form_for @user, url: login_path  do |f| %>
   <% if @error %>
     <div id="error_explanation">
       <h5>  <%= @error %> </h5>
     </div>
   <% end %>      
 <div>
     <%= f.label :username%>
     <%= f.text_field :username%>
 </div>
 <div>
     <%= f.label :password%>
     <%= f.password_field :password%>
 </div>
      <%=f.submit "login"%>

  <% end %>
 </div>
 
  <%= link_to('Log in with Facebook!', '/auth/facebook') %>


 