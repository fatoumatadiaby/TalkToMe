<%= form_for post do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div><br>
  <div>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div><br>
  <div>
    <%= f.label :published_date %>
    <%= f.date_field :published_date %>
  </div><br>

  <%= f.submit button_name %>
<% end %>
